{% if category != NULL %}
    {% if category.getUrl() != 'bang-gia' %}
        {% if relatedNews|length > 0 %}
            <div class="related-news">
                <h3>{{ 'news.news_related'|trans }}</h3>
                <div class="row">
                    {% for row in relatedNews %}
                        {% set imagePath = (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) %}
                        {% set imagePathFilter = (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_554_400') %}
                                                
                        {% if convert_images.fileExists(imagePath) == false %}
                            {% set imagePath = imagePath | imagine_filter('news_554_400') %}
                        {% else %}
                            {% set imagePath = convert_images.webpConvert(imagePathFilter, '', true) %}
                        {% endif %}
                        
                        <div class="col-xs-12 col-sm-4 col-md-3">
                            <div class="related-wrapper">
                                <div class="related-img">
                                    {% if category is defined %}
                                        <a href="{{ path('news_show', {'slug': row.getUrl(), 'danh-muc': category.getUrl() }) }}" title="{{ row.getTitle() }}">
                                            <img
                                                width="277"
                                                height="200"
                                                class="img-thumbnail"
                                                loading="lazy"
                                                src="{{ imagePath != false ? asset(imagePath) : asset(imagePathFilter) }}"
                                                alt="{{row.getTitle()}}" />
                                        </a>
                                    {% else %}
                                        <a href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getTitle() }}">
                                            <img
                                                width="277"
                                                height="200"
                                                class="img-thumbnail"
                                                loading="lazy"
                                                src="{{ imagePath != false ? asset(imagePath) : asset(imagePathFilter) }}"
                                                alt="{{row.getTitle()}}" />
                                        </a>
                                    {% endif %}
                                </div>
                                <h2>
                                {% if category is defined %}
                                    <a class="related-title" href="{{ path('news_show', {'slug': row.getUrl(), 'danh-muc': category.getUrl() }) }}" title="{{ row.getTitle() }}">
                                        {{ row.getTitle() }}
                                    </a>
                                {% else %}
                                    <a class="related-title" href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getTitle() }}">
                                        {{ row.getTitle() }}
                                    </a>
                                {% endif %}
                                </h2>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
