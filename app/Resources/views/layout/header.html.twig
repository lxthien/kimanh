        <div class="container">
            <div class="row">
                <div class="col-md-4" id="logo_top">
                    <div id="logo">								
                        <a href="{{ path('homepage') }}" title="{{ get_setting('siteName') }}">
                            <img
                                src="{{ asset(convert_images.webpConvert2(asset('/assets/images/logo.png'), '')) }}"
