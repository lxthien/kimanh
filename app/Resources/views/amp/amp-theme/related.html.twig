{% if category != NULL %}
    {% if category.getUrl() != 'bang-gia' %}
        {% if relatedNews|length > 0 %}
            <div class="related-news">
                <h3>{{ 'news.news_related'|trans }}</h3>
                <div class="row">
                    {% for row in relatedNews %}
                        <div class="col-xs-12 col-sm-4 col-md-3">
                            <div class="related-wrapper">
                                <div class="related-img">
                                    {% if category is defined %}
                                        <a href="{{ path('news_show', {'slug': row.getUrl(), 'danh-muc': category.getUrl() }) }}" title="{{ row.getTitle() }}">
                                            <amp-img
                                                alt="{{row.getTitle()}}"
                                                src="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_406_280') }}"
                                                width="406"
                                                height="280"
                                                layout="responsive"
                                            >
                                            </amp-img>
                                        </a>
                                    {% else %}
                                        <a href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getTitle() }}">
                                            <amp-img
                                                alt="{{row.getTitle()}}"
                                                src="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_406_280') }}"
                                                width="406"
                                                height="280"
                                                layout="responsive"
                                            >
                                            </amp-img>
                                        </a>
                                    {% endif %}
                                </div>
                                {% if category is defined %}
                                    <a class="related-title" href="{{ path('news_show', {'slug': row.getUrl(), 'danh-muc': category.getUrl() }) }}" title="{{ row.getTitle() }}">
                                        {{ row.getTitle() }}
                                    </a>
                                {% else %}
                                    <a class="related-title" href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getTitle() }}">
                                        {{ row.getTitle() }}
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="related-news">
            <h3>Khách hàng đánh giá về chúng tôi</h3>
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <div class="related-wrapper video-related">
                        <div class="youtube-video-place embed-responsive embed-responsive-4by3" data-yt-url="https://www.youtube.com/embed/qZHPIqGX7pA?rel=0&showinfo=0&autoplay=1">
                            <amp-youtube
                                id="qZHPIqGX7pA"
                                data-videoid="qZHPIqGX7pA"
                                width="345"
                                height="258"
                                layout="responsive"
                            >
                                <amp-img
                                    src="https://img.youtube.com/vi/qZHPIqGX7pA/hqdefault.jpg"
                                    placeholder
                                    layout="fill"
                                />
                            </amp-youtube>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <div class="related-wrapper video-related">
                        <div class="youtube-video-place embed-responsive embed-responsive-4by3" data-yt-url="https://www.youtube.com/embed/Jw70fD5eZp4?rel=0&showinfo=0&autoplay=1">
                            <amp-youtube
                                id="Jw70fD5eZp4"
                                data-videoid="Jw70fD5eZp4"
                                width="345"
                                height="258"
                                layout="responsive"
                            >
                                <amp-img
                                    src="https://img.youtube.com/vi/Jw70fD5eZp4/hqdefault.jpg"
                                    placeholder
                                    layout="fill"
                                />
                            </amp-youtube>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endif %}
<div class="clearfix"></div>